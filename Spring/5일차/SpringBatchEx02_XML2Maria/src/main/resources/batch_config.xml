<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:batch="http://www.springframework.org/schema/batch"
	xsi:schemaLocation="http://www.springframework.org/schema/batch http://www.springframework.org/schema/batch/spring-batch.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- DB연결 정보를 입포트 한다. -->
	<import resource="classpath:context-datasource.xml" />

	<!-- 일을 저장할 저장소를 만든다. -->
	<bean
		class="org.springframework.batch.core.repository.support.MapJobRepositoryFactoryBean"
		id="jobRepository"></bean>

	<!-- 일을 실행할 실행기를 만든다. -->
	<bean
		class="org.springframework.batch.core.launch.support.SimpleJobLauncher"
		id="jobLauncher">
		<property name="jobRepository" ref="jobRepository"></property>
	</bean>

	<!-- 일을 등록한다. -->
	<!-- 읽을때 사용할 객체 -->
	<bean class="org.springframework.batch.item.xml.StaxEventItemReader"
		id="xmlReader">
		<property name="resource" value="classpath:ExamResult.xml"></property>
		<property name="fragmentRootElementName"
			value="examResult"></property>
		<property name="unmarshaller">
			<bean class="org.springframework.oxm.jaxb.Jaxb2Marshaller">
				<property name="classesToBeBound">
					<list>
						<value>kr.green.batch.vo.ExamResult</value>
					</list>
				</property>
			</bean>
		</property>
	</bean>
	<!-- 저장할때 사용할 객체 -->
	<bean
		class="org.springframework.batch.item.database.JdbcBatchItemWriter"
		id="jdbcItemWriter">
		<property name="dataSource" ref="dataSource"></property>
		<property name="sql">
			<value>
				<![CDATA[
					insert into EXAM_RESULT
						(STUDENT_NAME, DOB, PERCENTAGE) 
                    values 
                    	(?, ?, ?)
				]]>
			</value>
		</property>
		<property name="itemPreparedStatementSetter">
			<bean
				class="kr.green.batch.vo.ExamResultItemPreparedStatementSetter"></bean>
		</property>
	</bean>

	<bean id="flatFileItemWriter"
		class="org.springframework.batch.item.file.FlatFileItemWriter"
		scope="step">
		<property name="resource" value="file:examResult.txt" />
		<property name="lineAggregator">
			<bean
				class="org.springframework.batch.item.file.transform.DelimitedLineAggregator">
				<property name="delimiter" value="," />
				<property name="fieldExtractor">
					<bean
						class="org.springframework.batch.item.file.transform.BeanWrapperFieldExtractor">
						<property name="names"
							value="studentName, percentage, dob" />
					</bean>
				</property>
			</bean>
		</property>
	</bean>

	<!-- 아이템 한개 처리시마다 실행할 프로세스 등록 -->
	<bean id="itemProcessor"
		class="kr.green.batch.vo.ExamResultItemProcessor"></bean>
	<!-- 감시자 등록 : 시작과 종료시 처리 -->
	<bean id="jobListener"
		class="kr.green.batch.vo.ExamResultJobListener"></bean>

	<!-- 트랜젝션메니저 등록 -->
	<bean
		class="org.springframework.batch.support.transaction.ResourcelessTransactionManager"
		id="transactionManager" />

	<!-- 실제일을 등록한다. -->
	<batch:job id="examResultJob">
		<batch:step id="step1" next="step2">
			<batch:tasklet transaction-manager="transactionManager">
				<batch:chunk reader="xmlReader" writer="jdbcItemWriter"
					processor="itemProcessor" commit-interval="10"></batch:chunk>
			</batch:tasklet>
		</batch:step>
		<batch:step id="step2">
			<batch:tasklet transaction-manager="transactionManager">
				<batch:chunk reader="xmlReader" writer="flatFileItemWriter"
					processor="itemProcessor" commit-interval="10"></batch:chunk>
			</batch:tasklet>
		</batch:step>
		<batch:listeners>
			<batch:listener ref="jobListener"></batch:listener>
		</batch:listeners>
	</batch:job>
</beans>
